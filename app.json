{
  "id": "com.heatnglo.rc300",
  "version": "1.0.1",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Heat N Glo RC300 Fireplace Remote"
  },
  "description": {
    "en": "Adds support for fireplaces controlled by the Heat N Glo RC300 Intellifire Plus remote."
  },
  "tags": {
    "en": ["heatnglo", "intellifire", "remote", "rc300", "fire", "gas", "fireplace"]
  },
  "category": [
    "appliances"
  ],
  "permissions": [
    "homey:wireless:433"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "John Bothe",
    "email": "jbothe@gmail.com"
  },
  "capabilities": {
    "my_fan_speed": {
      "type": "number",
      "title": {
        "en": "Fan Speed"
      },
      "getable": true,
      "setable": true,
      "min": 0,
      "max": 2,
      "step": 1.0
    }
  },
  "drivers": [
    {
      "id": "rc300",
      "name": {
        "en": "Heat N Glo RC300"
      },
      "images": {
        "large": "/drivers/rc300/assets/images/large.png",
        "small": "/drivers/rc300/assets/images/small.png"
      },
      "class": "heater",
      "capabilities": [ "onoff" ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "signals": {
    "433": {
      "rc300": {
        "sof": [
          800,
          425,
          375,
          425,
          900,
          425,
          400,
          1225,
          900
        ],
        "eof": [
          5000,
          5000
        ],
        "words": [
          [
            1500,
            400
          ],
          [
            1500,
            900
          ],
          [
            675,
            400
          ],
          [
            675,
            900
          ]
        ],
        "interval": 18000,
        "sensitivity": 0.5,
        "repetitions": 30,
        "minimalLength": 47,
        "maximalLength": 47,
        "txOnly": true
      }
    }
  }
}
